<Page
    x:Class="AppForNetworktest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppForNetworktest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="Res" Text="{x:Bind res}" Height="119" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="place" Height="28"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,149,0,0" Width="100"/>
        <Button x:Name="get" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,200,0,0" Width="100" Height="30" Content="getWeather"/>
        <Button x:Name="switch_fun" Click="switch_fun_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,250,0,0" Width="100" Height="30" Content="switch"/>
    </Grid>
</Page>
